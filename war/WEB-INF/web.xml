<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>ligature</servlet-name>
    <servlet-class>com.github.whym.ligature.servlet.LigatureServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ligature</servlet-name>
        <url-pattern>/ligature</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>ligature-rv</servlet-name>
      <servlet-class>com.github.whym.ligature.servlet.LigatureServlet</servlet-class>
      <init-param>
        <param-name>reverse</param-name>
        <param-value>true</param-value>
      </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>ligature-rv</servlet-name>
        <url-pattern>/ligature/reverse</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
